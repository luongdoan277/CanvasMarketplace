@model OrderDetailDTO

@{
    ViewData["Title"] = "Update Order Status";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Update Order Status</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-6">
                <h6 class="m-0 font-weight-bold text-primary">Order Information</h6>
                <div class="form-group">
                    <label class="font-weight-bold">Total Amount:</label>
                    <p>@Model.TotalAmount</p>
                </div>
                <div class="form-group">
                    <label class="font-weight-bold">Status:</label>
                    <p>@Model.Status</p>
                </div>
                <div class="form-group">
                    <label class="font-weight-bold">Customer Name:</label>
                    <p>@Model.AppUser.FirstName</p>
                </div>
                <div class="form-group">
                    <label class="font-weight-bold">Email:</label>
                    <p>@Model.AppUser.Email</p>
                </div>
            </div>
            <div class="col-lg-6">
                <h6 class="m-0 font-weight-bold text-primary">Update Status</h6>
                <form method="post" asp-action="Edit">
                    <input type="hidden" name="orderId" value="@Model.Id" />
                    <div class="form-group">
                        <label for="newStatus">New Status:</label>
                        <select class="form-control" id="newStatus" name="newStatus">
                            <option value="Pending">Pending</option>
                            <option value="Confirmed">Confirmed</option>
                            <option value="Shipped">Shipped</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Update Status</button>
                </form>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Price</th>
                        <th>Category</th>
                        <th>ProductImageThumbnailUrl</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderItems)
                    {
                        <tr>
                            <td>@item.ProductName</td>
                            <td>@item.Price</td>
                            <td>@item.ProductCategory.Name</td>
                            <td>
                                <img src="@item.ProductImageThumbnailUrl" alt="Product Thumbnail" class="product-thumbnail">
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
