@model UserDTO

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Are you sure you want to delete this?</h6>
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                <label asp-for="Name" class="control-label"></label>
            </dt>
            <dd class="col-sm-10">
                <span asp-for="Name" class="form-control" readonly>@Model.Name</span>
            </dd>
            <dt class="col-sm-2">
                <label asp-for="Email" class="control-label"></label>
            </dt>
            <dd class="col-sm-10">
                <span asp-for="Email" class="form-control" readonly>@Model.Email</span>
            </dd>
            <dt class="col-sm-2">
                <label asp-for="PhoneNumber" class="control-label"></label>
            </dt>
            <dd class="col-sm-10">
                <span asp-for="PhoneNumber" class="form-control" readonly>@Model.PhoneNumber</span>
            </dd>
            <dt class="col-sm-2">
                <label asp-for="Role" class="control-label"></label>
            </dt>
            <dd class="col-sm-10">
                <span asp-for="Role" class="form-control" readonly>@Model.Role</span>
            </dd>
        </dl>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>
</div>
